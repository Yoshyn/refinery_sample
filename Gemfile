source 'https://rubygems.org'


## Rails Common gem

gem 'rails',        '4.1.6'       # Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'sqlite3'                     # Use sqlite3 as the database for Active Record
gem 'sass-rails',   '~> 4.0.3'    # Use SCSS for stylesheets
gem 'uglifier',     '>= 1.3.0'    # Compressor for JavaScript assets
gem 'coffee-rails', '~> 4.0.0'    # Use CoffeeScript for .js.coffee assets and views

## Rails Other

gem 'jquery-rails'                # Use jquery as the JavaScript library
# gem 'turbolinks'                  # Turbolinks makes following links in your web application faster.
gem 'jbuilder', '~> 2.0'          # Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'quiet_assets'                # Quiet Assets turns off the Rails asset pipeline log.
# gem 'bcrypt', '~> 3.1.7'        # Use ActiveModel has_secure_password

group :development do
  gem 'spring'                    # Speeds up development by keeping your application running in the background.
  gem "better_errors"
  gem "binding_of_caller"
  # gem 'debugger'                # Use debugger
end


# Bootstrap gem

gem 'bootstrap-sass', '~> 3.2.0.2'


## Refinery Gem

gem 'refinerycms',        github:   'refinery/refinerycms',       branch: 'master'
gem 'refinerycms-i18n',   github:   'refinery/refinerycms-i18n',  branch: 'master'
gem 'refinerycms-acts-as-indexed',  ['~> 2.0', '>= 2.0.0']
gem 'refinerycms-wymeditor',        ['~> 1.0', '>= 1.0.0']
gem 'seo_meta',           github:   'parndt/seo_meta',            branch: 'master'
gem 'paper_trail',        github:   'airblade/paper_trail',       branch: 'master' # Track changes to your models' data. Versioning!
gem 'refinerycms-events', path:     'vendor/extensions'


